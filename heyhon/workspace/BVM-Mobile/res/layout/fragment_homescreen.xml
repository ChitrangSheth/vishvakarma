<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#ABCDEF"
            android:orientation="vertical" >

         <TextView
            android:id="@+id/collegename"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="BVM Engineering College"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:textSize="25sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/motto"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Work is Worship"
            android:textStyle="italic"
            android:gravity="center"
            android:textSize="35sp" />
        </LinearLayout>
<ScrollView 
    android:id="@+id/scrollView1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#E0FFFF" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
         >

        <ImageView
            android:id="@+id/bvm_pic"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:src="@drawable/bvm_splash" />
       
        <TextView
            android:id="@+id/text_mission"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Mission"
            android:paddingLeft="20dp"
            android:layout_marginTop="30dp"
            android:textSize="40sp" />
        <TextView
            android:id="@+id/mission"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/mission"
            android:textStyle="italic"
            android:paddingLeft="20dp"
            android:layout_marginTop="20dp"
            android:textSize="25sp" />
        <TextView
            android:id="@+id/text_vision"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Vision"
            android:paddingLeft="20dp"
            android:layout_marginTop="50dp"
            android:textSize="40sp" />
        <TextView
            android:id="@+id/vision"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/vision"
            android:textStyle="italic"
            android:paddingLeft="20dp"
            android:layout_marginTop="20dp"
            android:textSize="25sp" />

    </LinearLayout>

</ScrollView>
</LinearLayout>